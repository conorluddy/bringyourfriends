
<%# #Inherits from layout.erb %>
    



<div data-role="header" data-position="inline">
	
	<a href="/home" class="ui-btn-left ui-btn ui-btn-inline ui-mini ui-corner-all ui-btn-icon-left ui-icon-bars ui-btn-icon-notext"></a>
	<span class="ui-title">
		Lift App prototype | Trips
	</span>

</div>


<div data-role="content" data-theme="a">

	<ul data-role="listview" data-inset="true">
		<li data-role="list-divider">Saved trips</li>
		<% for trip in @trips %>

		<li>
			<a href="/trip/<%= trip.id %>" data-ajax="false" >
				<h2>Owner: <%= trip.user.firstname %></h2>
				<p>
					<strong>Created: <%= trip.created_at %></strong>
				</p>
				<p>
					Invitation message
				</p>
				<p class="ui-li-aside">
					<strong>0:00</strong>PM
				</p>
			</a>
		</li>

		<% end %>

	</ul>

</div>






